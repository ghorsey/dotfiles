function yayInstall {
  local app="$1"

#  if ! command -v "$cmd" >/dev/null 2>&1; then
  if ! yay -Q "$app" >/dev/null 2>&1; then
    echo "ℹ️ Installing $app..."
    if ! yay -Sy "$app" --noconfirm; then
      echo "⚠️ Failed to install $app, continuing..."
      return 0
    fi
  else
    echo "✔️ $app is already installed"
  fi


}

